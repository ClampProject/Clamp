<xml>
    <category name="Movement" colour="#0bf">
        <label text="Movement" />
        <block type="movement_gotoxy">
            <value name="X">
                <shadow type="generic_number">
                    <field name="NUMBER">320</field>
                </shadow>
            </value>
            <value name="Y">
                <shadow type="generic_number">
                    <field name="NUMBER">180</field>
                </shadow>
            </value>
        </block>
        <block type="movement_gotorandom" />
        <block type="movement_setxy">
            <value name="POS">
                <shadow type="generic_number">
                    <field name="NUMBER">80</field>
                </shadow>
            </value>
        </block>
        <block type="movement_changexy">
            <value name="POS">
                <shadow type="generic_number">
                    <field name="NUMBER">80</field>
                </shadow>
            </value>
        </block>
    </category>
    <category name="Appearance" colour="#f3a">
        <label text="Appearance" />
        <block type="appearance_showCharacter" />
        <block type="appearance_hideCharacter" />
    </category>
    <category name="Sounds" colour="#f55">
    </category>
    <category name="Actions" colour="#fa4">
        <label text="Actions" />
        <block type="actions_whenrunclicked" />
        <block type="actions_whenstopclicked" />
        <block type="actions_showmessage">
            <value name="TEXT">
                <shadow type="generic_text">
                    <field name="TEXT">Hello!</field>
                </shadow>
            </value>
        </block>
        <block type="actions_waitSeconds">
            <value name="TIME">
                <shadow type="generic_number">
                    <field name="NUMBER">10</field>
                </shadow>
            </value>
        </block>
        <label text="" />
        <block type="actions_onflagevent" />
        <block type="actions_fireflagevent" />
    </category>
    <category name="Controls" colour="#56f">
    </category>
    <category name="Operations" colour="#1d4">
    </category>
    <sep class="bt"/>
    <category name="Variables" colour="#4CBEFF">
    </category>
    <category name="Lists" colour="#4C9BFF">
    </category>
    <category name="Tables" colour="#4C65FF">
    </category>
</xml>